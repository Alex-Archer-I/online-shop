<form action="<%= path %>?_csrf=<%= locals.csurfToken %>" method="POST" enctype="multipart/form-data">
    <p>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= product.title %>" required>
    </p>
    <div id="image-uploader">
        <p>
            <label for="image">Image</label>
            <input type="file" name="image" id="image" accept="image/png,image/jpg" <% if (imgRequired) { %>required<% } %>>
        </p>

        <img src="" alt="Selected image...">
    </div>
    <p>
        <label for="category">Category</label>
        <select name="category" id="category">
            <% for (category of categories) { %>
                <option value="<%= category.name %>" <% if (product.category === category.name) { %> selected <% } %>><%= category.name %></option>
            <% } %>
        </select>
    </p>
    <p>
        <label for="summary">Summary</label>
        <input type="text" name="summary" id="summary" value="<%= product.summary %>" required>
    </p>
    <p>
        <label for="price">Price</label>
        <input type="number" name="price" id="price" min="0.1" step="0.1" value="<%= product.price %>" required>
    </p>
    <p>
        <label for="description">Description</label>
        <textarea name="description" id="description" rows="7" required><%= product.description %></textarea>
    </p>
    <p>
        <button type="reset" class="btn btn-alt">Reset</button>
        <button class="btn">Save</button>
    </p>
</form>